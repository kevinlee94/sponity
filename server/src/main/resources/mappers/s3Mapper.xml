<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.sponity.model.dao.S3Dao">

	<!-- 프로필 이미지 파일의 S3 서버 URL 추가 -->
	<update id="updateImgUrl" parameterType="Map">
		UPDATE user
		SET profile_img = #{url}
		WHERE user_id = #{userId}
	</update>
	
	<!-- 프로필 이미지 파일의 S3 서버 URL 삭제 -->
	<update id="deleteImgUrl" parameterType="String">
		UPDATE user
		SET profile_img = null
		WHERE user_id = #{userId}
	</update>
	
</mapper>